<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >


    <LinearLayout
        android:id="@+id/top_layout"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/event_view"
        android:foreground="?selectableItemBackground"
        android:weightSum="7"
        >


        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1.7"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/DailyTipsBookmarkListImageID"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/app_icon_small_1"
                android:layout_marginLeft="8dp"
                />


        </LinearLayout>


        <LinearLayout
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="4.3"
            android:layout_height="match_parent">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/DailyTipsBookmarkListTitleID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_marginTop="20dp"

                    />

            </LinearLayout>


            <LinearLayout
                android:gravity="bottom"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/DailyTipsBookmarkViewPostID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Post"
                    android:textSize="15sp"
                    android:textColor="#0290f5"
                    android:foreground="?selectableItemBackground"
                    android:clickable="true"
                    />




            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/DailyTipsBookmarkDeleteID"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_delete_black_24dp"
                android:foreground="?selectableItemBackground"
                android:clickable="true"
                />



        </LinearLayout>



    </LinearLayout>


</LinearLayout>