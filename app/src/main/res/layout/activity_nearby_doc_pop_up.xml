<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Background"
    android:orientation="vertical"
    tools:context=".NearbyDocPopUP">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search Nearby Doctors"
        android:textSize="17dp"
        android:textColor="@color/TextColor"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        />


    <Button
        android:id="@+id/AutomaticallyButtonID"
        android:textAlignment="center"
        android:layout_width="210dp"
        android:layout_height="45dp"
        android:text="Automatically"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:backgroundTint="#5972FF"
        android:textColor="@color/TextColor"


        />

    <Button

        android:id="@+id/ManuallyButtonID"
        android:textAlignment="center"
        android:layout_width="210dp"
        android:layout_height="45dp"
        android:text="Manually"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:backgroundTint="#5972FF"
        android:textColor="@color/TextColor"


        />





</LinearLayout>