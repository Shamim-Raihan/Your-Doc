<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="3"
    android:background="@drawable/bg_2"
    android:orientation="vertical"
    tools:context=".EmergencyActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Emergency Service"
            android:textColor="#000000"
            android:textSize="25sp"
            />

    </LinearLayout>


    <LinearLayout
        android:paddingTop="40dp"
        android:paddingBottom="40dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="vertical"
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.cardview.widget.CardView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="40dp"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="#ffffff"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:foreground="?selectableItemBackground"
                android:clickable="true"
                >


                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ambulance"

                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"



                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Emergency Ambulance"
                        android:textSize="17sp"
                        android:textColor="#000000"
                        android:layout_marginTop="35dp"


                        />

                    <TextView
                        android:id="@+id/AmbulanceID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View List"
                        android:layout_gravity="right"
                        android:layout_marginRight="20dp"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginTop="15dp"
                        android:textColor="#0290f5"
                        android:foreground="?selectableItemBackground"
                        android:clickable="true"

                        />

                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="40dp"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="#ffffff"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:foreground="?selectableItemBackground"
                android:clickable="true"
                >


                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/emergency_doctor"

                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"



                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Emergency Doctor"
                        android:textSize="17sp"
                        android:textColor="#000000"
                        android:layout_marginTop="35dp"


                        />

                    <TextView
                        android:id="@+id/DoctorID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View List"
                        android:layout_gravity="right"
                        android:layout_marginRight="20dp"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginTop="15dp"
                        android:textColor="#0290f5"
                        android:foreground="?selectableItemBackground"
                        android:clickable="true"

                        />

                </LinearLayout>


            </LinearLayout>




        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="40dp"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="#ffffff"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:foreground="?selectableItemBackground"
                android:clickable="true"
                >


                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/blood"

                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"



                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Emergency Blood"
                        android:textSize="17sp"
                        android:textColor="#000000"
                        android:layout_marginTop="35dp"


                        />

                    <TextView
                        android:id="@+id/BloodID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View List"
                        android:layout_gravity="right"
                        android:layout_marginRight="20dp"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginTop="15dp"
                        android:textColor="#0290f5"
                        android:foreground="?selectableItemBackground"
                        android:clickable="true"

                        />

                </LinearLayout>


            </LinearLayout>



        </androidx.cardview.widget.CardView>


    </LinearLayout>


</LinearLayout>